package codingtest.ct.week02;

public class Ex0202 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Maxmin maxmin = new Maxmin();
		maxmin.max(1, 3, 5);
	}

}

class Maxmin{
	int max(int a , int b, int c) {
		int max = a;
		if( b > max ) max = b;
		if( c > max ) max = c;
		
		
		return max;
	}
	int min(int a , int b, int c) {
		int min = a;
		
		if( b < min ) min = b;
		if( c < min ) min = c;
		
		return min;
	}
}
